<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bottom_bar_selected_top"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/definite_dimen_10"/>

    <ImageView
        android:id="@+id/imgIconMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home" />

    <TextView
        android:id="@+id/tvMenuItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="@dimen/definite_dimen_2"
        android:text="Artists"
        android:textSize="@dimen/text_size_xsmall"
        android:textColor="@color/ALPHA_WHITE_60" />

    <ImageView
        android:id="@+id/imgIconMenuSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_selected"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvMenuItemTextSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="@dimen/definite_dimen_2"
        android:text="Artists"
        android:visibility="gone"
        android:textSize="@dimen/text_size_xsmall"
        android:textColor="@color/green_text" />

</LinearLayout>
