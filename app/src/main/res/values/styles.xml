<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogLoadingTheme">
        <item name="android:windowBackground">@color/ALPHA_WHITE_80</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/definite_dimen_0</item>
        <item name="cornerSizeTopRight">@dimen/definite_dimen_0</item>
        <item name="cornerSizeBottomLeft">@dimen/definite_dimen_36</item>
        <item name="cornerSizeBottomRight">@dimen/definite_dimen_36</item>
        <item name="backgroundColor">#FF333333</item>
    </style>

    <style name="roundCornerMusicPage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/definite_dimen_36</item>
        <item name="cornerSizeTopRight">@dimen/definite_dimen_36</item>
        <item name="cornerSizeBottomLeft">@dimen/definite_dimen_36</item>
        <item name="cornerSizeBottomRight">@dimen/definite_dimen_36</item>
    </style>

    <style name="roundCornerAlbum" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/definite_dimen_20</item>
        <item name="cornerSizeTopRight">@dimen/definite_dimen_20</item>
        <item name="cornerSizeBottomLeft">@dimen/definite_dimen_20</item>
        <item name="cornerSizeBottomRight">@dimen/definite_dimen_20</item>
    </style>

</resources>
